<!--components/bottomBar/index.wxml-->
<view class="tab-bar">
  <view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-index="{{index}}"  data-path="{{ item.path }}" style="color:{{ select === index ? selectedColor : color }}"
  bindtap="switchTab">
    <text class="iconfont icon_{{item.tag}}" ></text>
    <view>{{ item.text }}</view>
  </view>
</view>

/* pages/order/order.wxss */
@import '../../app.wxss';
.item-sell {
  height: 20px;
  width: 20px;
  color: #de4b4e;
  font-size: 20px;
  position: absolute;
  top: -5px;
  left: 5px;
  background-color: #ffffff;
}

.goods-item {
  width: 100%;
  position: relative;
  margin-bottom: 5px;
  padding-bottom: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #ffffff;
  box-shadow: 0 3px 1.5px #f6f6f6;
}

.item-picture {
  width: 100%;
  height: 180px;
  margin-bottom: 10px;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #4a4a4a;
}

.subtitle {
   color: #a3a3a3;
  margin: 5px 0;
  font-size: 12px;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
}

.price {
  font-size: 12px;
  color: #a3a3a3;
  letter-spacing: 0.5px;
}

.sell-price  {
  color: #de4b4e;
  font-size: 16px;
}

.old-price {
  text-decoration-line: line-through;
}

.order-botton {
  width: 80px;
  height: 24px;
  font-size: 12px;
  background-color: #de4b4e;
  color: #ffffff;
  border-radius: 12px;
  display: flex;
  justify-content: center;
  align-items: center;

}
/* pages/order/check/index.wxss */
@import '../../../app.wxss';
@import '../details/index.wxss';
.item-sell {
  height: 20px;
  width: 20px;
  color: #de4b4e;
  font-size: 20px;
  position: absolute;
  top: -5px;
  left: 5px;
  background-color: #ffffff;
}

.check-item {
  display: flex;
  width: 100vw;
  align-items: center;
  background-color: #fefefe;
  box-sizing: border-box;
}

.check-img {
  width: 100px;
  height: 100px;
  background-size: 100px 60px;
  background-repeat: no-repeat;
  background-position: center center;
  background-color: #efefef;
  position: relative;
}

.check-text {
  flex: 1;
  height: 100px;
  display: flex;
  flex-direction:column;
  justify-content: space-evenly;
}

.quantity {
  display: flex;
  height: 40px;
  margin: 5px 0;
  background-color: #fefefe;
  justify-content: space-between;
  align-items: center;
}

.check-form {
  width: 100vw;
  padding: 0 10px;
  box-sizing: border-box;
}

.check-person {
  margin: 5px 0;
  background-color: #fefefe;
}

.check-title {
  display: flex;
  font-size: 14px;
  padding: 10px 0;
  align-items: center;
}

.placeholder {
  color: #cecece;
}

.check-input {
  padding: 5px 2px;
}

.check-area {
  height: 50px;
}

.total {
  color: #db4e4d;
  font-size: 14px;
  width: 30vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-botton {
  flex: 1;
}

.shop-pay{
  width: 100px;
  font-size: 14px;
}

.item-bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
}